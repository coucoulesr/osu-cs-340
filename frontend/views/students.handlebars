<link rel = "stylesheet" href = "stylesheets/modal.css">

{{!-- Wrapper --}}
<div class="flex flex-col items-center justify-center">
  {{!-- Main Div--}}
  <div class = "flex flex-col justify-center w-4/6">

    <h1 class="text-5xl my-2">Students</h1>

    {{!-- Classes Div--}}
    <div class="p-4 bg-blue-50 flex flex-col">

    {{!-- Box --}}
    <div class="p-4 bg-blue-50">

      {{!-- Add Student button --}}
      <button class = "modal_open w-56 mx-4 text-white bg-indigo-400 shadow rounded-2xl h-14">
        Add Student
      </button>
    

      {{!-- Add-Class modal --}}
      <div class = "modal">
        <div class="bg-blue-100 w-96 justify-self-center h-72">
          <div class = "flex justify-between w-full px-4 text-lg text-white bg-indigo-400">
            <h1 class = >Add a new student</h2>
            <button class = "modal_close text-white">x</button>
          </div>

          <form id="add-student" action="/create-student" method="POST">
            <div class="inline-flex flex-col p-4 space-y-4 bg-blue-100">
              <div>
                <label for="pin" class="inline-block w-32 mr-2 text-right">
                  PIN:
                </label>
                <input type="text" id="pin" name="pin" placeholder="1001" class="shadow focus:outline-none focus:placeholder-transparent"/>
              </div>
              <div>
                <label for="first-name" class="inline-block w-32 mr-2 text-right">
                  First Name:
                </label>
                <input type="text" id="first-name" name="first_name" placeholder="Lola" class="shadow focus:outline-none focus:placeholder-transparent"/>
              </div>
              <div>
                <label for="last-name" class="inline-block w-32 mr-2 text-right">
                  Last Name:
                </label>
                <input type="text" id="last-name" name="last_name" placeholder="Bunny" class="shadow focus:outline-none focus:placeholder-transparent"/>
              </div>
              <input class="self-end p-2 text-white bg-indigo-400 shadow rounded-xl" type="submit" value="Add Student" />
            </div>
          </form>
        </div>
      </div>

      <ul>
      {{#each students}}
        <li class = "bg-white h-14 border border-blue-300 shadow flex flex-row  justify-between items-center p-4 m-2 hover:bg-gray-50">
          <a class = "hover:underline" href="/students/{{this.id}}">
            {{this.pin}}
            -
            {{this.first_name}}
            {{this.last_name}}
          </a>

          <div class = "flex flex-row justify-between w-20 text-blue-500 hover:text-blue-800">
            <button class = "modal_open">Edit</button>
            <button class="js-delete-student-button" data-student-id="{{this.id}}">
              <svg 
                viewBox="-40 0 427 427.00131" 
                xmlns="http://www.w3.org/2000/svg"
                class="w-4 text-red-400 fill-current hover:text-red-500"
              >
