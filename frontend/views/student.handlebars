{{!-- Wrapper --}}
<div class="flex flex-col items-center justify-center">
  {{!-- Main Div--}}
  <div class = "flex flex-col justify-center w-4/6">
    <h1 class="text-5xl my-2">{{student.first_name}} {{student.last_name}}</h1>
    {{!-- Student Info Div--}}
    <div class="p-4 bg-blue-50 flex flex-col">
    {{!-- Box --}}
      <h2 class="ml-4 text-lg">Enrolled courses:</h2>
      <div class="px-2">
        <ul>
        {{#each courses}}
          <a class = "hover:underline" href="/courses/{{this.id}}">
            <li class = "bg-white h-14 border border-blue-300 shadow flex flex-row justify-between items-center p-4 m-2 hover:bg-gray-50">
              
                {{this.subject}}{{this.course_number}} - {{this.title}}
              
            </li>
            </a>
        {{/each}}
        </ul>
      </div>
  </div>
</div>