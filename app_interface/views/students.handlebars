<link rel = "stylesheet" href = "stylesheets/modal.css">


{{!-- Wrapper --}}
<div class="flex flex-col items-center justify-center">
  {{!-- Main Div--}}
  <div class = "flex flex-col justify-center w-4/6">

    <h1 class="text-5xl my-2">Classes</h1>

    {{!-- Students Div--}}
    <div class="p-4 bg-blue-50 flex flex-col">

      {{!-- Add-Student button --}}
      <button id = "modal_open" class = "bg-indigo-400 text-white rounded-2xl shadow my-4 w-56 h-14 self-start">
        Add Student
      </button>

      {{!-- Display Student Data --}}
      <div class = "bg-white h-14 border border-blue-300 shadow flex flex-row  justify-between items-center p-4">
        <button>John Doe - 123456789</button>
        <div class = "w-24 flex flex-row justify-between text-blue-500">
          <button>Edit</button>
          <button>Delete</button>
        </div>
      </div>

      {{#each table_data}}

        <div class = "bg-white h-14 border border-blue-300 shadow flex flex-row  justify-between items-center p-4">
          <button>{{first_name}} {{last_name}} - {{pin}}</button>
          <div class = "w-24 flex flex-row justify-between text-blue-500">
            <button>Edit</button>
            <button>Delete</button>
          </div>
        </div>
      
      {{/each}}

      

      {{!-- Add-Student modal --}}
      <div id = "modal" class = "modal">
        <div class="bg-blue-100 w-96 justify-self-center h-72">
          <div class = "bg-indigo-400 w-full flex justify-between px-4 text-lg text-white">
            <h1 class = >Add a New Student</h2>
            <button id = "modal_close" class = "text-white">x</button>
          </div>

          <form id="add-course" method="POST" onsubmit="return false;">
            <div class="inline-flex flex-col p-4 space-y-4 bg-blue-100">
              <div>
                <label for="firstName" class="inline-block w-32 mr-2 text-right">
                  First Name:
                </label>
                <input type="text" id="title" name="title" placeholder="John" class = "focus:outline-none focus:placeholder-transparent shadow"/>
              </div>
              <div>
                <label for="lastName" class="inline-block w-32 mr-2 text-right">
                  Last Name:
                </label>
                <input type="text" id="subject" name="subject" placeholder="Doe" class = "focus:outline-none focus:placeholder-transparent shadow"/>
              </div>
              <div>
                <label for="PIN" class="inline-block w-32 mr-2 text-right">
                  Student ID Number:
                </label>
                <input type="text" id="course-number" name="course-number" placeholder="425" class = "focus:outline-none focus:placeholder-transparent shadow"/>
              </div>
              <input class="self-end p-2 bg-indigo-400 text-white rounded-xl shadow" type="submit" value="Add student" />
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>

<script src="javascripts/modal.js"></script>

