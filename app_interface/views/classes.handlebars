<link rel = "stylesheet" href = "stylesheets/modal.css">


{{!-- Wrapper --}}
<div class="flex flex-col items-center justify-center">
  {{!-- Main Div--}}
  <div class = "flex flex-col justify-center w-4/6">

    <h1 class="text-5xl my-2">Classes</h1>

    {{!-- Classes Div--}}
    <div class="p-4 bg-blue-50 flex flex-col">

    {{!-- Box --}}
    <div class="p-4 bg-blue-50">

      {{!-- Add-course button --}}
      <button id = "modal_open" class = "w-56 mx-4 text-white bg-indigo-400 shadow rounded-2xl h-14">
        Add Course
      </button>

      {{!-- Display Class Data --}}
      <div class = "bg-white h-14 border border-blue-300 shadow flex flex-row  justify-between items-center p-4">
        <button>TEST 101 - Remove this Div in classes.handlebars</button>
        <div class = "w-24 flex flex-row justify-between text-blue-500">
          <button>Edit</button>
          <button>Delete</button>
        </div>
      </div>

      {{#each table_data}}

        <div class = "bg-white h-14 border border-blue-300 shadow flex flex-row  justify-between items-center p-4">
          <button>{{subject}} - {{course_number}}: {{course}} - {{section}}</button>
          <div class = "w-24 flex flex-row justify-between text-blue-500">
            <button>Edit</button>
            <button>Delete</button>
          </div>
        </div>
      
      {{/each}}

      

      {{!-- Add-Class modal --}}
      <div id = "modal" class = "modal">
        <div class="bg-blue-100 w-96 justify-self-center h-72">
          <div class = "flex justify-between w-full px-4 text-lg text-white bg-indigo-400">
            <h1 class = >Add a New Course</h2>
            <button id = "modal_close" class = "text-white">x</button>
          </div>

          <form id="add-course" action="/create-course" method="POST">
            <div class="inline-flex flex-col p-4 space-y-4 bg-blue-100">
              <div>
                <label for="title" class="inline-block w-32 mr-2 text-right">
                  Title:
                </label>
                <input type="text" id="title" name="title" placeholder="Martian Economics" class="shadow focus:outline-none focus:placeholder-transparent"/>
              </div>
              <div>
                <label for="subject" class="inline-block w-32 mr-2 text-right">
                  Subject:
                </label>
                <input type="text" id="subject" name="subject" placeholder="ECON" class="shadow focus:outline-none focus:placeholder-transparent"/>
              </div>
              <div>
                <label for="course-number" class="inline-block w-32 mr-2 text-right">
                  Course Number:
                </label>
                <input type="text" id="course-number" name="course_number" placeholder="425" class="shadow focus:outline-none focus:placeholder-transparent"/>
              </div>
              <div>
                <label for="section" class="inline-block w-32 mr-2 text-right">
                  Section:
                </label>
                <input type="text" id="section" name="section" placeholder="2" class="shadow focus:outline-none focus:placeholder-transparent"/>
              </div>
              <input class="self-end p-2 text-white bg-indigo-400 shadow rounded-xl" type="submit" value="Add Course" />
            </div>
          </form>
        </div>
      </div>

      <ul>
      {{#each courses}}
        <li class="flex items-center gap-x-2">
          <a href="/courses/{{this.id}}">
            {{this.subject}}{{this.course_number}} - {{this.title}}
          </a>
          <button class="js-delete-course-button" data-course-id="{{this.id}}">
